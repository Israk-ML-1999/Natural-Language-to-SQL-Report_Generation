# Natural Language to SQL System - Environment Variables

# Required: Anthropic API Key for Claude AI
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Database Configuration
# Default database URL (SQLite demo database)
DB_URL=sqlite:///demo_sales.db

# For PostgreSQL:
# DB_URL=postgresql://username:password@localhost:5432/database_name

# For MySQL:
# DB_URL=mysql+pymysql://username:password@localhost:3306/database_name

# Optional: Server Configuration
FLASK_ENV=production
FLASK_DEBUG=False
HOST=0.0.0.0
PORT=8000

# Optional: Security Settings
SECRET_KEY=your_secret_key_here

# Optional: Logging
LOG_LEVEL=INFO
